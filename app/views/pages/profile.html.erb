<h1>Manage bookings</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Plane</th>
      <th scope="col">Request by</th>
      <th scope="col">Start</th>
      <th scope="col">End</th>
      <th scope="col">Status</th>
      <th scope="col">Accept</th>
      <th scope="col">Decline</th>
    </tr>
  </thead>
  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <th scope="row"><%= booking.id %></th>
        <td><%= booking.plane.name %></td>
        <td><%= booking.user_id %></td>
        <td><%= booking.start_date %></td>
        <td><%= booking.end_date %></td>
        <td><%= booking.status %></td>
        <td>
          <% if policy(booking).validate?  %>
            <%= link_to "Accept", validate_booking_path(booking), data: { 'turbo-method': :patch } %>
          <% end %>
        </td>
        <td>
          <% if policy(booking).deny? %>
            <%= link_to "Decline", deny_booking_path(booking), data: { 'turbo-method': :patch } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

