<div class="container p-4">
  <div class="how-section1">
    <div class="row">
      <div class="col-md-6 how-img">
        <% if current_user.name == "alexis" || current_user.name == "cecile" || current_user.name == "ouss" %>
          <%= image_tag "users/#{current_user.name}.png", class: "rounded-circle img-fluid" %>
        <% else %>
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "rounded-circle img-fluid" %>
        <% end %>
      </div>
      <div class="col-md-6">
        <h4><strong><%= current_user.name.capitalize() %></strong></h4>
        <h4 class="subheading"><i class="fa-regular fa-envelope"></i> <%= current_user.email %></h4>
        <h4 class="subheading"><i class="fa-solid fa-baby"></i> <%= current_user.dob %></h4>
        <h4 class="subheading"><i class="fa-solid fa-plane-up"></i> <%= @planes.count() %> planes</h4>
        <%= link_to "My Dashboard", profile_path %>
        <br><br>
        <%= image_tag "https://upload.wikimedia.org/wikipedia/commons/a/a8/Private_Pilot.jpg", class: "img-fluid img-thumbnail" %>
      </div>
    </div>
  </div>
</div>
