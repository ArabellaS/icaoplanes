<main>

  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Rent a plane</h1>
        <p class="lead text-muted">Something short and leading about the collection below—its contents, the creator, etc. Make it short and sweet, but not too short so folks don’t simply skip over it entirely.</p>
        <p>
          <%= link_to "All planes", planes_path, class: "btn btn-primary my-2" %>
        </p>
      </div>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% @planes.each do |plane| %>
        <div class="col">
          <div class="card shadow-sm">
            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em"><%= plane.name %></text></svg>
            <div class="card-body">
              <p class="card-text"><%= plane.description %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= link_to "View", plane_path(plane), class:"btn btn-sm btn-outline-secondary" %>
                  <%= link_to "Book", new_plane_booking_path(plane.id), class: "btn btn-sm btn-outline-secondary" %>
                </div>
                <small class="text-muted">Created by <%= plane.user_id %></small>
              </div>
            </div>
          </div>
        </div>
        <% end %>

      </div>
    </div>
  </div>

</main>