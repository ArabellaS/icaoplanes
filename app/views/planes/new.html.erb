<%= simple_form_for(@plane) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :seats %>
    <%= f.input :speed %>
    <%= f.input :location %>
    <%= f.input :category %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
